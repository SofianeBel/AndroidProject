rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
    
    match /profile_images/{userId}/{imageId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId.split('_')[0];
    }
    
    match /banner_images/{userId}/{imageId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId.split('_')[0];
    }
    
    match /post_images/{postId} {
      allow read;
      allow write: if request.auth != null;
    }
  }
} 