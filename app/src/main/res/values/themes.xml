<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.H3Project" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/twitter_blue</item>
        <item name="colorPrimaryVariant">@color/twitter_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/twitter_blue</item>
        <item name="colorSecondaryVariant">@color/twitter_blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Text input style -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/twitter_black</item>
        <item name="android:textColorSecondary">@color/twitter_dark_gray</item>
    </style>
</resources>